
@{
    ViewBag.Title = "PasswordReset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrap-login100 p-l-40 p-r-40 p-t-20 p-b-20">
    <form class="login100-form validate-form flex-sb flex-w">

        <span class="login100-form-title p-b-53">
            Update Password
        </span>

        <div class="p-t-p-b-9">
            <span class="txt1">
                Email
            </span>
        </div>
        <div class="wrap-input100 validate-input" maxlength="100">
            <input class="input100" type="text" name="email" data-custom-text="Valid email is required">
            <span class="focus-input100"></span>
        </div>
        <div class="p-t-p-b-9">
            <span class="txt1">
                Password
            </span>
        </div>
        <div class="wrap-input100 validate-input" maxlength="100">
            <input class="input100" type="password" name="password" data-custom-text="Minimum 8 characters are required for password">
            <span class="focus-input100"></span>
        </div>

        <div class="p-t-p-b-9">
            <span class="txt1">
                Confirm Password
            </span>
        </div>
        <div class="wrap-input100 validate-input" maxlength="100">
            <input class="input100" type="password" name="confirmpassword" data-custom-text="Minimum 8 characters are required for password">
            <span class="focus-input100"></span>
        </div>

        <div class="container-login100-form-btn m-t-17">
            <button class="login100-form-btn">
                Password Reset
            </button>
        </div>

        <div class="w-full text-center p-t-55">

            <a href="@Url.Action("Signup","User")" class="txt2 bo1">
                Sign up now
            </a>
            <span class="txt2">
                |
            </span>
            <a href="@Url.Action("Login","User")" class="txt2 bo1">
                Login Here
            </a>
        </div>
    </form>
</div>
<script src="~/Content/Scripts/Custom/PasswordReset.js"></script>

