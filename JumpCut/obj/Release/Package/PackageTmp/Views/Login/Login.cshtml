@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    }
<div class="wrap-login100 p-l-40 p-r-40 p-t-20 p-b-20">
    <form class="login100-form validate-form flex-sb flex-w">

        <div class="p-t-p-b-9">
            <span class="txt1">
                Email
            </span>
        </div>
        <div class="wrap-input100 validate-input" maxlength="100" >
            <input class="input100" type="text" name="email" data-custom-text="Valid email is required">
            <span class="focus-input100"></span>
        </div>

        <div class="p-t-13 p-b-9">
            <span class="txt1">
                Password
            </span>

            <a href="@Url.Action("PasswordResetRequest","User")" class="txt2 bo1 m-l-5">
                Forgot?
            </a>
        </div>
        <div class="wrap-input100 validate-input" maxlength="50" >
            <input class="input100" type="password" name="password" data-custom-text="password is required">
            <span class="focus-input100"></span>
        </div>

        <div class="container-login100-form-btn m-t-17">
            <button class="login100-form-btn">
                Sign In
            </button>
        </div>

        <div class="w-full text-center p-t-55">
            <span class="txt2">
                Not a member?
            </span>

            <a href="@Url.Action("Signup","User")" class="txt2 bo1">
                Sign up now
            </a>
        </div>

    </form>
</div>

<script src="~/Content/Scripts/Custom/Login.js"></script>